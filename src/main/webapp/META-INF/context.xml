<?xml version="1.0" encoding="UTF-8"?>
<Context>
  <!-- Restrict access to localhost only.
  Address format depends on the OS so we need to cover a wide range of 'localhost' addresses. -->
  <Valve className="org.apache.catalina.valves.RemoteAddrValve"
  allow="0:0:0:0:0:0:0:1(%.*)?,::1(%.*)?,127\.0\.0\.1" />
</Context>
