<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

	<class name="de.lemo.dms.db.miningDBclass.CourseChatMining"
		table="course_chat">

		<id name="id" column="id" type="long">
		</id>

		<property name="platform" column="platform" type="long" />

		<many-to-one name="course"
			class="de.lemo.dms.db.miningDBclass.CourseMining" cascade="save-update,persist"
			column="course_id" />

		<many-to-one name="chat"
			class="de.lemo.dms.db.miningDBclass.ChatMining" cascade="save-update,persist"
			column="chat_id" />

	</class>

</hibernate-mapping>