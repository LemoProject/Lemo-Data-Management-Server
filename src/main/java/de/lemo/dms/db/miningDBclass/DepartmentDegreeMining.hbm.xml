<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    
    <class
        name="de.lemo.dms.db.miningDBclass.DepartmentDegreeMining"
        table="department_degree">

        <id
            name="id"
            column="id"
            type="long">
        </id>
 
        <property
            name="platform"
            column="platform"
            type="long"/>  
                                     

		<many-to-one 
       		name="department" 
       		class="de.lemo.dms.db.miningDBclass.DepartmentMining"
       		cascade="save-update" 
            column="department_id" />
            
       <many-to-one 
       		name="degree" 
       		class="de.lemo.dms.db.miningDBclass.DegreeMining"
       		cascade="save-update" 
            column="degree_id" />            

                
    </class>

</hibernate-mapping>