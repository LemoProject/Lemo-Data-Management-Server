<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    
    <class
        name="de.lemo.dms.db.miningDBclass.CourseQuizMining"
        table="course_quiz">
        
        <id
            name="id"
            column="id"
            type="long">
        </id>
 
        <property
            name="platform"
            column="platform"
            type="long"/>  
                   
		<many-to-one 
       		name="course" 
       		class="de.lemo.dms.db.miningDBclass.CourseMining"
            column="course_id" />
            
        <many-to-one name="quiz" class="de.lemo.dms.db.miningDBclass.QuizMining"> 
       		<column name="quiz_id"/>           
		</many-to-one>

                
    </class>

</hibernate-mapping>