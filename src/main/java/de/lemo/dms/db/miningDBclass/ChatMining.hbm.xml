<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    
    <class
        name="de.lemo.dms.db.miningDBclass.ChatMining"
        table="chat">

        <id
            name="id"
            column="id"
            type="long">
        </id>
        
       <property
            name="title"
            column="title"
            type="string"/>
        
        <property
            name="description"
            column="description"
            type="text"/>

        <property
            name="chattime"
            column="chattime"
            type="long"/>
                        
        <set name="chat_log" inverse="true"	lazy="false">
        	<key column="id"/>
			<one-to-many class="de.lemo.dms.db.miningDBclass.ChatLogMining"/>
		</set>
 
    </class>

</hibernate-mapping>