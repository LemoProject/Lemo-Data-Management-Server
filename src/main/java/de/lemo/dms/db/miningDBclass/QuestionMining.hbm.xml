<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    
    <class
        name="de.lemo.dms.db.miningDBclass.QuestionMining"
        table="question">

        <id
            name="id"
            column="id"
            type="long">
        </id>
  
        <property
            name="platform"
            column="platform"
            type="long"/>  
                      
        <property
            name="title"
            column="title"
            type="string"/>
            
        <property
            name="text"
            column="text"
            type="text"/>
            
        <property
            name="type"
            column="type"
            type="string"/>
               
        <property
            name="timeCreated"
            column="timecreated"
            type="long"/>
            
       <property
            name="timeModified"
            column="timemodified"
            type="long"/>
            
		<set name="quizQuestions" inverse="true" lazy="false">
			<key column="question_id"/>
			<one-to-many class="de.lemo.dms.db.miningDBclass.QuizQuestionMining"/>
		</set>
		
		<set name="questionLogs" inverse="true" lazy="false">
			<key column="question_id"/>
			<one-to-many class="de.lemo.dms.db.miningDBclass.QuestionLogMining"/>
		</set>
                
    </class>

</hibernate-mapping>