<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    
    <class
        name="de.lemo.dms.db.miningDBclass.RoleMining"
        table="role">

        <id
            name="id"
            column="id"
            type="long">
        </id>

        <property
            name="name"
            column="name"
            type="string"/>
 
        <property
            name="platform"
            column="platform"
            type="long"/>  
                       
        <property
            name="shortname"
            column="shortname"
            type="string"/>
                        
        <property
            name="description"
            column="description"
            type="text"/>
            
        <property
            name="sortorder"
            column="sortorder"
            type="long"/>

		<set name="course_user" inverse="true" lazy="false">
			<key column="role_id"/>
			<one-to-many class="de.lemo.dms.db.miningDBclass.CourseUserMining"/>
		</set> 
                
    </class>

</hibernate-mapping>