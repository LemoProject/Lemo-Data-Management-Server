<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    
    <class
        name="de.lemo.dms.db.miningDBclass.LevelMining"
        table="level">

        <id
            name="id"
            column="id"
            type="long">
        </id>
 
        <property
            name="platform"
            column="platform"
            type="long"/> 
            
        <property
            name="depth"
            column="depth"
            type="long"/>   
           
        <property
            name="title"
            column="title"
            type="string"/>
       

		<set name="levelAssociations" inverse="true" lazy="false">
			<key column="lower_id"/>
			<one-to-many class="de.lemo.dms.db.miningDBclass.LevelAssociationMining"/>
		</set> 
		
		<set name="levelCourses" inverse="true" lazy="false">
			<key column="level_id"/>
			<one-to-many class="de.lemo.dms.db.miningDBclass.LevelCourseMining"/>
		</set> 
		                
    </class>

</hibernate-mapping>