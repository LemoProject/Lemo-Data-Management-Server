<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

	<class name="de.lemo.dms.db.miningDBclass.ArchiveMining"
		table="archive">

		<id name="id" column="id" type="long">
		</id>

		<property name="title" column="title" type="string" />

		<property name="platform" column="platform" type="long" />

		<set name="archiveLogs" inverse="true" lazy="false">
			<key>
				<column name="archive_id" />
			</key>
			<one-to-many class="de.lemo.dms.db.miningDBclass.ArchiveLogMining" />
		</set>

		<set name="courseArchives" inverse="true" lazy="false">
			<key>
				<column name="archive_id" />
			</key>
			<one-to-many class="de.lemo.dms.db.miningDBclass.CourseArchiveMining" />
		</set>

	</class>

</hibernate-mapping>