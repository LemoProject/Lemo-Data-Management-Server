<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    
    <class
        name="de.lemo.dms.db.miningDBclass.ResourceMining"
        table="resource">

        <id
            name="id"
            column="id"
            type="long"/>
 
        <property
            name="platform"
            column="platform"
            type="long"/>  
           
            
        <property
            name="type"
            column="type"
            type="string"/>

        <property
            name="title"
            column="title"
            type="string"/>
               
        <property
            name="timecreated"
            column="timecreated"
            type="long"/>  
            
        <property
            name="timemodified"
            column="timemodified"
            type="long"/>
            
        <property
            name="difficulty"
            column="difficulty"
            type="string"/>
            
        <property
            name="processingTime"
            column="processingtime"
            type="long"/>

        <property
            name="url"
            column="url"
            type="text"/>
            
        <property
            name="position"
            column="position"
            type="long"/>
            
		<set name="course_resource" inverse="true" lazy="false">
			<key column="resource_id"/>
			<one-to-many class="de.lemo.dms.db.miningDBclass.CourseResourceMining"/>
		</set>
		
		<set name="resource_log" inverse="true" lazy="false">
			<key column="resource_id"/>
			<one-to-many class="de.lemo.dms.db.miningDBclass.ResourceLogMining"/>
		</set>
		
		
                              
    </class>

</hibernate-mapping>