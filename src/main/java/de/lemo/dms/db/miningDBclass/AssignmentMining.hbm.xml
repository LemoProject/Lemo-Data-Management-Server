<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

	<class name="de.lemo.dms.db.miningDBclass.AssignmentMining"
		table="assignment">

		<id name="id" column="id" type="long">
		</id>

		<property name="type" column="type" type="string" />

		<property name="title" column="title" type="string" />

		<property name="platform" column="platform" type="long" />


		<property name="maxGrade" column="maxgrade" type="double" />

		<property name="timeOpen" column="timeopen" type="long" />

		<property name="timeClose" column="timeclose" type="long" />

		<property name="timeCreated" column="timecreated" type="long" />

		<property name="timeModified" column="timemodified" type="long" />

		<set name="assignmentLogs" inverse="true" lazy="false">
			<key>
				<column name="assignment_id" />
			</key>
			<one-to-many class="de.lemo.dms.db.miningDBclass.AssignmentLogMining" />
		</set>

		<set name="courseAssignments" inverse="true" lazy="false">
			<key>
				<column name="assignment_id" />
			</key>
			<one-to-many class="de.lemo.dms.db.miningDBclass.CourseAssignmentMining" />
		</set>

	</class>

</hibernate-mapping>