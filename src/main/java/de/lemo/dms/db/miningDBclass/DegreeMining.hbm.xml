<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    
    <class
        name="de.lemo.dms.db.miningDBclass.DegreeMining"
        table="degree">

        <id
            name="id"
            column="id"
            type="long">
        </id>
 
        <property
            name="platform"
            column="platform"
            type="long"/>  
           
        <property
            name="title"
            column="title"
            type="string"/>
       

		<set name="department_degree" inverse="true" lazy="false">
			<key column="degree_id"/>
			<one-to-many class="de.lemo.dms.db.miningDBclass.DepartmentDegreeMining"/>
		</set> 
		
		<set name="degree_course" inverse="true" lazy="false">
			<key column="degree_id"/>
			<one-to-many class="de.lemo.dms.db.miningDBclass.DegreeCourseMining"/>
		</set> 
		                
    </class>

</hibernate-mapping>