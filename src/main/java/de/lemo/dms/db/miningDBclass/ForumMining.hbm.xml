<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

	<class name="de.lemo.dms.db.miningDBclass.ForumMining" table="forum">

		<id name="id" column="id" type="long">
		</id>

		<property name="platform" column="platform" type="long" />

		<property name="title" column="title" type="string" />

		<property name="summary" column="summary" type="text" />

		<property name="timeModified" column="timemodified" type="long" />

		<property name="timeCreated" column="timecreated" type="long" />

		<set name="courseForums" inverse="true" lazy="false">
			<key column="forum_id" />
			<one-to-many class="de.lemo.dms.db.miningDBclass.CourseForumMining" />
		</set>

		<set name="forumLogs" inverse="true" lazy="false">
			<key column="forum_id" />
			<one-to-many class="de.lemo.dms.db.miningDBclass.ForumLogMining" />
		</set>

	</class>

</hibernate-mapping>