<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    
    <class
        name="de.lemo.dms.db.miningDBclass.AssignmentLogMining"
        table="assignment_log">

        <id
            name="id"
            column="id"
            type="long">
        </id>
              
        <property
            name="grade"
            column="grade"
            type="double"/>
             
        <property
            name="duration"
            column="duration"
            type="long"/>   
 
        <property
            name="platform"
            column="platform"
            type="long"/>  
           
        <property
            name="action"
            column="action"
            type="string"/>
            
        <property
            name="timestamp"
            column="timestamp"
            type="long"/>
            
        <many-to-one 
       		name="user" 
       		class="de.lemo.dms.db.miningDBclass.UserMining"
       		cascade="save-update" 
            column="user_id" />
            
		<many-to-one 
       		name="course" 
       		class="de.lemo.dms.db.miningDBclass.CourseMining"
            column="course_id" />
            
		<many-to-one 
			name="assignment" 
			class="de.lemo.dms.db.miningDBclass.AssignmentMining"
       		column="assignment_id" />
            
    </class>

</hibernate-mapping>