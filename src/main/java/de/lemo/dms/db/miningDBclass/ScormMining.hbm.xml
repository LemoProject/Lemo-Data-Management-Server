<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    
    <class
        name="de.lemo.dms.db.miningDBclass.ScormMining"
        table="scorm">

        <id
            name="id"
            column="id"
            type="long">
        </id>
 
        <property
            name="platform"
            column="platform"
            type="long"/>  
                   
       <property
            name="type"
            column="type"
            type="string"/>
        
        <property
            name="title"
            column="title"
            type="string"/>
            
        <property
            name="maxgrade"
            column="maxgrade"
            type="double"/>

        <property
            name="timeopen"
            column="timeopen"
            type="long"/>
            
        <property
            name="timeclose"
            column="timeclose"
            type="long"/>
            
        <property
            name="timecreated"
            column="timecreated"
            type="long"/>
               
        <property
            name="timemodified"
            column="timemodified"
            type="long"/>
            
		<set name="scorm_log" inverse="true" lazy="false">
			<key>
				<column name="scorm_id"/>
			</key>
			<one-to-many class="de.lemo.dms.db.miningDBclass.ScormLogMining"/>
		</set>
 
  		<set name="course_scorm" inverse="true" lazy="false">
			<key>
				<column name="scorm_id"/>
			</key>
			<one-to-many class="de.lemo.dms.db.miningDBclass.CourseScormMining"/>
		</set>
                
    </class>

</hibernate-mapping>