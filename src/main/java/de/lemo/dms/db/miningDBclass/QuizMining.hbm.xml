<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    
    <class 
    	name="de.lemo.dms.db.miningDBclass.QuizMining"
        table="quiz">

		<id	
			name="id"
			type="long"
			column="id"/>
 
        <property
            name="platform"
            column="platform"
            type="long"/>  
           		
 		<property 
			name="type"
			type="string" 
			column="type"/>	
				       
        <property
            name="title"
            column="title"
            type="string"/>
            
        <property
            name="maxGrade"
            column="maxgrade"
            type="double"/>

        <property
            name="timeOpen"
            column="timeopen"
            type="long"/>
            
        <property
            name="timeClose"
            column="timeclose"
            type="long"/>
            
        <property
            name="timeCreated"
            column="timecreated"
            type="long"/>
               
        <property
            name="timeModified"
            column="timemodified"
            type="long"/>        
            
		<set name="courseQuizzes" inverse="true" lazy="false">
			<key>
				<column name="quiz_id"/>
			</key>
			<one-to-many class="de.lemo.dms.db.miningDBclass.CourseQuizMining"/>
		</set>

		<set name="quizQuestions" inverse="true" lazy="false">
			<key>
				<column name="quiz_id"/>
			</key>
			<one-to-many class="de.lemo.dms.db.miningDBclass.QuizQuestionMining"/>
		</set>
		
        <set name="quizLogs" inverse="true" lazy="false">
			<key>
				<column name="quiz_id"/>
			</key>
			<one-to-many class="de.lemo.dms.db.miningDBclass.QuizLogMining"/>
		</set>

        <set name="quizUsers" inverse="true" lazy="false">
			<key>
				<column name="quiz_id"/>
			</key>
			<one-to-many class="de.lemo.dms.db.miningDBclass.QuizUserMining"/>
		</set>

		<set name="questionLogs" inverse="true" lazy="false">
			<key>
				<column name="quiz_id"/>
			</key>
			<one-to-many class="de.lemo.dms.db.miningDBclass.QuestionLogMining"/>
		</set>
                
    </class>

</hibernate-mapping>