<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

	<class name="de.lemo.dms.db.miningDBclass.CourseResourceMining"
		table="course_resource">

		<id name="id" column="id" type="long">
		</id>

		<property name="platform" column="platform" type="long" />

		<many-to-one name="course" lazy="false"
			class="de.lemo.dms.db.miningDBclass.CourseMining" cascade="save-update"
			column="course_id" />

		<many-to-one name="resource" lazy="false"
			class="de.lemo.dms.db.miningDBclass.ResourceMining" cascade="save-update"
			column="resource_id" />

	</class>

</hibernate-mapping>