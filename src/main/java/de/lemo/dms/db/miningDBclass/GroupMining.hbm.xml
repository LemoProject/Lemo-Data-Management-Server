<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

	<class name="de.lemo.dms.db.miningDBclass.GroupMining" table="`group`">

		<id name="id" column="id" type="long">
		</id>

		<property name="platform" column="platform" type="long" />

		<property name="timeCreated" column="timecreated" type="long" />

		<property name="timeModified" column="timemodified" type="long" />

		<set name="courseGroups" inverse="true" lazy="false">
			<key column="group_id" />
			<one-to-many class="de.lemo.dms.db.miningDBclass.CourseGroupMining" />
		</set>

		<set name="groupUsers" inverse="true" lazy="false">
			<key column="group_id" />
			<one-to-many class="de.lemo.dms.db.miningDBclass.GroupUserMining" />
		</set>

	</class>

</hibernate-mapping>