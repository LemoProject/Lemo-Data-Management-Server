<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    
    <class
        name="de.lemo.dms.db.miningDBclass.GroupMining"
        table="`group`">

        <id
            name="id"
            column="id"
            type="long">
        </id>
 
        <property
            name="platform"
            column="platform"
            type="long"/>  
                          
        <property
            name="timecreated"
            column="timecreated"
            type="long"/>  
            
        <property
            name="timemodified"
            column="timemodified"
            type="long"/>
            
		<set name="course_group" inverse="true" lazy="false">
			<key column="group_id"/>
			<one-to-many class="de.lemo.dms.db.miningDBclass.CourseGroupMining"/>
		</set>
		
		<set name="group_user" inverse="true" lazy="false">
			<key column="group_id"/>
			<one-to-many class="de.lemo.dms.db.miningDBclass.GroupUserMining"/>
		</set>              
                            
    </class>

</hibernate-mapping>