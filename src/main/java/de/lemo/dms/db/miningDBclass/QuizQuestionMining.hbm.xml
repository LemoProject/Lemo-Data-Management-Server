<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    
    <class
        name="de.lemo.dms.db.miningDBclass.QuizQuestionMining"
        table="quiz_question">

        <id
            name="id"
            column="id"
            type="long">
        </id>
 
        <property
            name="platform"
            column="platform"
            type="long"/>  
           
		<many-to-one name="quiz" 
		class="de.lemo.dms.db.miningDBclass.QuizMining" cascade="save-update"> 
       		<column name="quiz_id"/>           
		</many-to-one>
            
		<many-to-one 
       		name="question" 
       		class="de.lemo.dms.db.miningDBclass.QuestionMining"
       		cascade="save-update" 
            column="question_id" />            
            
    </class>

</hibernate-mapping>