<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

    <class
        name="de.lemo.dms.connectors.clix2010.clixDBClass.T2Task"
        table="lemo_db.T2_TASK">

        <id
            name="id"
            column="TASK_ID"
            type="long"
   		/>

        <property
            name="questionText"
            column="QUESTION_TEXT"
            type="string"/>

        <property
            name="taskType"
            column="TASKTYPE_ID"
            type="long"/>
            
        <property
            name="topicId"
            column="TOPIC_ID"
            type="long"/>    
            
        <property
            name="inputType"
            column="INPUT_TYPE"
            type="long"/>                        
            
    </class>

</hibernate-mapping>