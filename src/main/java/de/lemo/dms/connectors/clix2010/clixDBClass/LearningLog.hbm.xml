<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

	<class name="de.lemo.dms.connectors.clix2010.clixDBClass.LearningLog"
		table="LEARNING_LOG">

		<id name="id" column="LEARNING_LOG_ID" type="long">
			<generator class="native" />
		</id>

		<property name="lastUpdated" column="LASTUPDATED" type="string" />
		
		<property name="person" column="PERSON_ID" type="long" />

		<property name="course" column="COURSE_ID" type="long" />
		
		<property name="component" column="COMPONENT_ID" type="long" />
		
		<property name="startDate" column="START_DATE" type="string" />
		
		<property name="endDate" column="END_DATE" type="string" />	
		
		<property name="evaluatedScore" column="EVALUATED_SCORE" type="double" />
		
		<property name="typeOfModification" column="TYPE_OF_MODIFICATION" type="long" />

	</class>

</hibernate-mapping>