<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

    <class
        name="de.lemo.dms.connectors.clix2010.clixDBClass.Portfolio"
        table="PORTFOLIO">

        <id
            name="id"
            column="PORTFOLIO_ID"
            type="long">
            <generator class="native"/>
        </id>

        <property
            name="person"
            column="PERSON_ID"
            type="long"/>

        <property
            name="component"
            column="COMPONENT_ID"
            type="long"/>
            
        <property
            name="endDate"
            column="ENDDATE"
            type="string"/>

        <property
            name="startDate"
            column="STARTDATE"
            type="string"/>
            
    </class>

</hibernate-mapping>