<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

    <class
        name="de.lemo.dms.connectors.clix2010.clixDBClass.TeamExerciseGroupMember"
        table="TEAM_EXERCISE_GROUP_MEMBER">

        <id
            name="id"
            column="EXERCISE_GROUP_MEMBER_ID"
            type="long">
            <generator class="native"/>
        </id>

        <property
            name="portfolio"
            column="PORTFOLIO_ID"
            type="long"/>

        <property
            name="exerciseGroup"
            column="EXERCISE_GROUP_ID"
            type="long"/>
            
    </class>

</hibernate-mapping>