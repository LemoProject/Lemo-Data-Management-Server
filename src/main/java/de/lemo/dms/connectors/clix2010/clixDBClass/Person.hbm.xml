<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

	<class name="de.lemo.dms.connectors.clix2010.clixDBClass.Person"
		table="PERSON">

		<id name="id" column="PERSON_ID" type="long">
			<generator class="native" />
		</id>

		<property name="lastLoginTime" column="LASTLOGINTIME" type="string" />

		<property name="login" column="LOGIN" type="string" />

		<property name="gender" column="SALUTATION_ID" type="long" />

		<property name="firstLoginTime" column="FIRSTLOGINTIME" type="string" />
		
		<property name="lastUpdated" column="LASTUPDATED" type="string" />

	</class>

</hibernate-mapping>