<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

    <class
        name="de.lemo.dms.connectors.clix2010.clixDBClass.TQtiContent"
        table="lemo_db.T_QTI_CONTENT">

        <id
            name="id"
            column="CONTENT_ID"
            type="long">
            <generator class="native"/>
        </id>

        <property
            name="created"
            column="CREATED"
            type="string"/>

        <property
            name="lastUpdated"
            column="LASTUPDATED"
            type="string"/>
            
        <property
            name="name"
            column="CONTENT_NAME"
            type="string"/>
            
    </class>

</hibernate-mapping>