<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    
    <class
        name="de.lemo.dms.db.miningDBclass.DepartmentMining"
        table="department">

        <id
            name="id"
            column="id"
            type="long">
        </id>

        <property
            name="title"
            column="title"
            type="string"/>

		<set name="department_degree" inverse="true" lazy="false">
			<key column="id"/>
			<one-to-many class="de.lemo.dms.db.miningDBclass.DepartmentDegreeMining"/>
		</set> 
				                
    </class>

</hibernate-mapping>