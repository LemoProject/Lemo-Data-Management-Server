<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    
    <class
        name="de.lemo.dms.db.miningDBclass.ScormLogMining"
        table="scorm_log">

        <id
            name="id"
            column="id"
            type="long">
        </id>
              
        <property
            name="grade"
            column="grade"
            type="double"/>
             
        <property
            name="action"
            column="action"
            type="string"/>
               
        <property
            name="timestamp"
            column="timestamp"
            type="long"/>
            
		<many-to-one 
       		name="course" 
       		class="de.lemo.dms.db.miningDBclass.CourseMining"
            column="course_id" />
            
		<many-to-one name="scorm" class="de.lemo.dms.db.miningDBclass.ScormMining"> 
       		<column name="scorm_id"/>
		</many-to-one>
            
    </class>

</hibernate-mapping>