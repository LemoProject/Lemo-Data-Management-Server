<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

    <class
        name="de.lemo.dms.connectors.clix2010.clixDBClass.Chatroom"
        table="lemo_db.CHATROOM">

        <id
            name="id"
            column="CHATROOM_ID"
            type="long">
            <generator class="native"/>
        </id>

        <property
            name="lastUpdated"
            column="LASTUPDATED"
            type="string"/>

        <property
            name="title"
            column="CHATROOM_NAME"
            type="string"/>
            
    </class>

</hibernate-mapping>