<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

    <class
        name="de.lemo.dms.connectors.moodle.moodleDBclass.Chat_LMS"
        table="chat">

        <id
            name="id"
            column="id"
            type="long">
            <generator class="native"/>
        </id>

        <property
            name="title"
            column="name"
            type="string"/>  

        <property
            name="description"
            column="intro"
            type="string"/> 
            
      <property
            name="chattime"
            column="chattime"
            type="long"/> 
            
      <property
            name="timemodified"
            column="timemodified"
            type="long"/> 
    
    </class>

</hibernate-mapping>